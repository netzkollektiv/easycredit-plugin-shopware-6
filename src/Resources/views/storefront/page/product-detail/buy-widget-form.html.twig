{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget-form.html.twig' %}

{% block page_product_detail_buy_container %}
    {{ parent() }}

    {% block page_product_detail_buy_container_easycredit %}
        {# @var easycredit #}
        {% set easycredit = page.extensions.easycredit %}

        {% if buyable and product.calculatedCheapestPrice.totalPrice > 0 and easyCreditAvailablePaymentTypes(context, product) and easycredit.expressProductEnabled %}
            <div class="form-row mt-3 justify-content-end d-flex">
                {% sw_include '@EasyCreditRatenkauf/storefront/component/express-button.html.twig' %}
            </div>
        {% endif %}
    {% endblock %}

{% endblock %}